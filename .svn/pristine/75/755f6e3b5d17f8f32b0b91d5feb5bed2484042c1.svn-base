<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF4000"
        android:text="@string/actions_title"/>

    <Button
        android:id="@+id/addBatchBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="New Batch"
        android:onClick="handleClickAction"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/addStudentBtn"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="handleClickAction"
        android:text="New Student"/>

    <Button
        android:id="@+id/markAttendanceBtn"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="handleClickAction"
        android:text="Mark Attendance"/>

    <Button
        android:id="@+id/attendCalViewBtn"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="handleClickAction"
        android:text="View Attendance" />

    <Button
        android:id="@+id/feeCalcBtn"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Calculate Fees"
        android:layout_width="150dp"
        android:onClick="handleClickAction"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/genReport"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Generate Report"
        android:onClick="handleClickAction"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</LinearLayout>
